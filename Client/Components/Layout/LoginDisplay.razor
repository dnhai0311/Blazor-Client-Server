<AuthorizeView>
    <Authorized>
        <MudText>Chào, @context?.User?.Identity?.Name!</MudText>
        <MudButton Href="/change-password" Color="Color.Primary" Class="text-decoration-none">Đổi mật khẩu</MudButton>
        <MudButton Href="/logout" Color="Color.Secondary" Class="text-decoration-none">Đăng xuất</MudButton>
    </Authorized>
    <NotAuthorized>
        <MudButton Href="/register" Color="Color.Primary" Class="text-decoration-none">Đăng ký</MudButton>
        <MudButton Href="/login" Color="Color.Secondary" Class="text-decoration-none">Đăng nhập</MudButton>

    </NotAuthorized>
</AuthorizeView>