@page "/change-password"
@inherits ChangePasswordBase

<MudText Typo="Typo.h3" Class="mb-4">Đổi Mật Khẩu</MudText>

<EditForm Model="changePasswordRequest" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator />
    <MudGrid>
        <MudItem xs="12">
            <MudCard>
                <MudCardContent>
                    <MudTextField Label="Mật khẩu cũ"
                                  @bind-Value="changePasswordRequest.OldPassword"
                                  For="@(() => changePasswordRequest.OldPassword)"
                                  InputType="InputType.Password" />
                    <MudTextField Label="Mật khẩu mới"
                                  Class="mt-3"
                                  @bind-Value="changePasswordRequest.NewPassword"
                                  For="@(() => changePasswordRequest.NewPassword)"
                                  InputType="InputType.Password" />
                    <MudTextField Label="Nhập lại mật khẩu mới"
                                  Class="mt-3"
                                  @bind-Value="changePasswordRequest.ConfirmNewPassword"
                                  For="@(() => changePasswordRequest.ConfirmNewPassword)"
                                  InputType="InputType.Password" />
                    <MudButton Disabled="@isLoading" ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="w-100 mt-3">
                        @if (isLoading)
                        {
                            <MudProgressCircular Size="Size.Small" Class="ms-n1" Indeterminate="true" />
                            <MudText Class="ms-2">Đang đổi mật khẩu</MudText>
                        }
                        else
                        {
                            <MudText Typo="Typo.inherit">Đổi mật khẩu</MudText>
                        }
                    </MudButton>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
</EditForm>
