@page "/login"
@inherits LoginBase

<MudText Typo="Typo.h3" Class="mb-2">Đăng Nhập</MudText>

<EditForm Model="loginRequest" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator />
    <MudGrid>
        <MudItem xs="12">
            <MudCard>
                <MudCardContent>
                    <MudTextField Label="Tên đăng nhập"
                                  @bind-Value="loginRequest.UserName" For="@(() => loginRequest.UserName)" autocomplete="username" />
                    <MudTextField Label="Mật khẩu" Class="mt-3"
                                  @bind-Value="loginRequest.Password" For="@(() => loginRequest.Password)" InputType="InputType.Password" />
                    <MudCheckBox Label="Lưu tài khoản" LabelPosition="LabelPosition.Start" @bind-Value="loginRequest.RememberMe" Class="mt-3" />
                    <MudButton Disabled="@isLoading" ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="w-100">
                        @if (isLoading)
                        {
                            <MudProgressCircular Size="Size.Small" Class="ms-n1" Indeterminate="true" />
                            <MudText Class="ms-2">Đang đăng nhập</MudText>
                        }
                        else
                        {
                            <MudText Typo="Typo.inherit">Đăng nhập</MudText>
                        }
                    </MudButton>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
</EditForm>
